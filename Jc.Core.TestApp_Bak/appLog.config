<?xml version="1.0" encoding="utf-8" ?>

<!-- This section contains the log4net configuration settings -->
<log4net>
  <!--数据库语句的日志 -->
  <appender name="AppLogAppender" type="log4net.Appender.RollingFileAppender">
    <file value="D:\SyncService\Log\Log" />
    <appendToFile value="true" />
    <maxSizeRollBackups value="50" />
    <maximumFileSize value="10MB" />
    <datePattern value="'ServiceLog-'yyyy-MM-dd'.log'" />
    <rollingStyle value="Composite" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level %message%newline" />
    </layout>
  </appender>
  <!--错误日志 -->
  <appender name="ErrorLogAppender" type="log4net.Appender.RollingFileAppender">
    <file value="D:\SyncService\Log\Error\" />
    <appendToFile value="true" />
    <maxSizeRollBackups value="50" />
    <maximumFileSize value="10MB" />
    <datePattern value="'ErrorLog-'yyyy-MM-dd'.log'" />
    <rollingStyle value="Composite" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level %message%newline" />
    </layout>
  </appender>
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level %message%newline" />
    </layout>
  </appender>
  <root>
    <level value="All" />
  </root>
  <logger name="ErrorLogger">
    <level value="warn" />
    <appender-ref ref="ErrorLogAppender" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  <logger name="AppLogger">
    <level value="info" />
    <appender-ref ref="AppLogAppender" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
</log4net>